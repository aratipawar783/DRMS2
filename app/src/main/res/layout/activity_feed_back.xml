<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".admin.FeedBackActivity"
    android:padding="20sp"
    android:id="@+id/main"
    android:background="#9E71E5F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="20sp"
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Feedback Report:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Branch with Class:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="  Enter Branch Name with Class"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:background="@drawable/edittext_border"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Date:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>
                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="  Enter Feedback Date as dd/mm/yy-dd/mm/yy"
                    android:textSize="25dp"
                    android:lines="6"
                    android:background="@drawable/edittext_border"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/tvSubjects"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_border"
                    android:layout_height="match_parent"
                    android:text="Subject Name"
                    android:textSize="10pt"
                    />
                <TextView
                    android:id="@+id/tvFeedback"
                    android:textAlignment="center"
                    android:layout_width="500dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="48dp"
                    android:text="Feedback"
                    android:textSize="10pt"
                    android:background="@drawable/edittext_border"
                    />

            </TableRow>

            <!-- Row 1 -->
            <TableRow>


                <EditText
                    android:id="@+id/et1"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="..."
                    android:inputType="text"
                    android:background="@drawable/edittext_border"
                    />
                <EditText
                    android:id="@+id/et2"
                    android:layout_width="500dp"
                    android:layout_height="48dp"
                    android:maxLines="8"
                    android:background="@drawable/edittext_border"
                    android:hint="..."
                    android:inputType="text"
                    />


            </TableRow>

            <!-- Row 2 -->
            <TableRow>


                <EditText
                    android:id="@+id/et3"
                    android:layout_width="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:layout_height="48dp"
                    android:hint="..."
                    android:inputType="text"
                    />
                <EditText
                    android:id="@+id/et4"
                    android:layout_width="500dp"
                    android:background="@drawable/edittext_border"
                    android:layout_height="48dp"
                    android:maxLines="8"
                    android:hint="..."
                    android:inputType="text"
                    />


            </TableRow>
            <!-- Row 3 - Merged Cells for SHORT BREAK -->
            <TableRow>

                <EditText
                    android:id="@+id/et5"
                    android:layout_width="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:layout_height="48dp"
                    android:hint="..."
                    android:inputType="text"
                    />
                <EditText
                    android:id="@+id/et6"
                    android:layout_width="500dp"
                    android:background="@drawable/edittext_border"
                    android:layout_height="48dp"
                    android:maxLines="8"
                    android:hint="..."
                    android:inputType="text"
                    />


            </TableRow>

            <!-- Row 6 - Merged Cells for LUNCH BREAK -->

            <!-- Row 7 -->
            <TableRow>

                <EditText
                    android:id="@+id/et7"
                    android:layout_width="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:layout_height="48dp"

                    android:hint="..."
                    android:inputType="text" />
                <EditText
                    android:id="@+id/et8"
                    android:layout_width="500dp"
                    android:background="@drawable/edittext_border"
                    android:layout_height="48dp"
                    android:maxLines="8"
                    android:hint="..."
                    android:inputType="text"/>


            </TableRow>

            <!-- Row 8 -->
            <TableRow>

                <EditText
                    android:id="@+id/et9"
                    android:layout_width="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:layout_height="48dp"

                    android:hint="..."
                    android:inputType="text"
                    />
                <EditText
                    android:id="@+id/et10"
                    android:layout_width="500dp"
                    android:background="@drawable/edittext_border"
                    android:layout_height="48dp"
                    android:maxLines="8"
                    android:hint="..."
                    android:inputType="text" />

            </TableRow>
            <TableRow>

            <EditText
                android:id="@+id/et11"
                android:layout_width="wrap_content"
                android:background="@drawable/edittext_border"
                android:layout_height="48dp"
                android:hint="..."
                android:inputType="text"
                />
            <EditText
                android:id="@+id/et12"
                android:layout_width="500dp"
                android:background="@drawable/edittext_border"
                android:layout_height="48dp"
                android:maxLines="8"
                android:hint="..."
                android:inputType="text" />
        </TableRow>
            <TableRow
                android:gravity="center">

                <Button
                    android:id="@+id/btnSaveFeedback"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:text="Save Feedback"
                    android:backgroundTint="#472387"
                    android:gravity="center"
                    android:textSize="10pt"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginTop="30dp"/>

            </TableRow>


            <!-- Existing layout code... -->

            <!-- Add this FrameLayout for the ImageView -->


            <!-- Existing layout code... -->
        </TableLayout>


</ScrollView>
